pipeline {
        agent any
        stages {
                stage ('SCM checkout') {
                                        steps {
                                              git "https://github.com/yogeshgund/maven-project.git"
                                              }
                                       }
                 stage ('install')     {
                                  steps {
                                         withMaven(maven: 'localmaven') {
                                                                         sh 'mvn clean install'
                                                                        }
                                        }
                                       }
                 stage ('sonar and install') {
											steps {
											       withSonarQubeEnv('sonar') 
												   withMaven(maven: 'localmaven') {
																					sh 'clean install sonar:sonar'
																			      }
												  }
               }
		}
